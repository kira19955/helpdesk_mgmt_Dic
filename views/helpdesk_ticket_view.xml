<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="ticket_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket">
                <header>
                    <field name="stage_id" widget="statusbar" clickable="True"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h2 class="o_row">
                            <field name="name" placeholder="Nombre Del Solicitante"/>
                        </h2>
                    </div>
                    <group name="main">
                        <group>
                            <field name="team_id" options='{"always_reload": True}'/>
                            <field name="user_id" options='{"always_reload": True}'/>
                            <field name="create_date" readonly="1" string="Fecha y Hora "/>
                            <field name="channel_id"/>
                        </group>
                        <group>
                            <field name="dep_hijo"/>
                            <field name="dep_padre" widget="selection"/>
                            <field name="category_id"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <center>
                            <separator string="Requerimiento"/>
                        </center>
                        <br/>
                        <br/>
                        <form>
                            <field name="solicitud2"/>
                        </form>

                </sheet>
            </form>
        </field>
    </record>


    <record id="ticket_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="stage_id"/>
                <field name="create_date" readonly="1" string="Fecha y Hora"/>
            </tree>
        </field>
    </record>

</odoo>
